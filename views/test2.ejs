<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/normalized.css">
    <link rel="stylesheet" href="/css/style2.css">
    <title>Mood Tracker</title>
</head>

<body>
  <div id="wrapper">
      
    <header>
      <h1>
        Assignment Completion Heatmap
      </h1>
    </header>

    <!-- Mood Picker Pop-up -->
    <div class="pop-up-container">
      <section class="pop-up">
        <div class="close-container">
            <button id="close" aria-label="Dismiss alert" type="button" data-close>
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <p id="pop-up-day"></p>
        <h2 id="pop-up-date"></h2>
        
        <form id="mood-otd" action="/add" method="POST">
            <%# Date %>
            <label for="date">Choose date:</label>
            <input type="date" id="date" name="date"  ass="block"  value="" min="2022-01-01" max="" required>
            <div class="selectContainer block">
                <input type="checkbox" name="anki" id="anki" value="Anki" required>
                <label for="overallPositive" >Studied Anki Flashcards</label>

                <input type="checkbox" name="bank" id="bank" value="Bank" required>
                <label for="overallPositive" >Practiced Interview Questions</label>

                <input type="checkbox" name="codingChallenge" id="codingChallenge" value="Coding Challenge" required>
                <label for="overallPositive" >Solved Coding Challenge</label>
            </div>
            <div class="notes-container">
                <label for="notes">Optional notes:</label>
                <textarea id="notes" name="notes" rows="5" cols="33" placeholder="What did you learn today? Any celebrations?"></textarea>
            </div>
        </form>
        <%# Button %>
        <div class="buttons block">
            <button form="mood-otd" type="submit">Submit</button>
            <button id="delete">Delete entry</button>
        </div>
        <p id="delete-error"></p>
        <div id="note-entry"></div>
      </section>
    </div>
      
    <!-- Mood display of year  -->
    <section class="moodsForYear">

      <!-- Vertical Labels for Days of Week -->
      <div class="dayLabelsContainer">
        <div class="dayLabel">Sun</div>
        <div class="dayLabel"></div>
        <div class="dayLabel">Tue</div>
        <div class="dayLabel"></div>
        <div class="dayLabel">Thu</div>
        <div class="dayLabel"></div>
        <div class="dayLabel">Sat</div>
      </div>

      <div class="week-divider"></div>
        <!-- loop to display a box for each day of the year -->
        <% for (let i = 0; i < allDatesInYear.length; i++) {%>

          <!-- set class to .dayBox and .#; set id to #date_YYYY-MM-DD -->
          <div class="<%= `${i} dayBox` %>" id="<%= 'date_' + allDatesInYear[i] %>">

            <!-- .dayBoxBubble .bubble_YYYY-MM-DD-->
            <% if (assignments[i]) { %>
              <div class="dayBoxBubble <%= 'bubble_' + allDatesInYear[i] %>">
                <%= assignments[i].completed.join(', ') %>
                <%= `${dayObjectsInYear[i].month_long.toLowerCase()} ${dayObjectsInYear[i].date}` %>
              </div>
            <% } else { %>
              <div class="dayBoxBubble <%= 'bubble_' + allDatesInYear[i] %>">
                <%= `${dayObjectsInYear[i].month_long.toLowerCase()} ${dayObjectsInYear[i].date}` %>
              </div>
            <% } %>

            <!-- .dayBoxPointer .bubble_YYYY-MM-DD -->
            <div class="dayBoxPointer <%= 'bubble_' + allDatesInYear[i] %>">
            </div>

            <!-- .dateError .error_YYYY-MM-DD -->
            <div class="dateError <%= 'error_' + allDatesInYear[i] %>">
              Date is in the future!
            </div>
            
            <!-- .notes-indicator -->
            <div class="notes-indicator">
            </div>
          </div>

          <!-- add Month label for the first saturday of each month -->
          <% if(dayObjectsInYear[i].day == 'Saturday') {%>
            <!-- .week-divider -->
            <div class="week-divider">
            </div>

            <!-- if current day is within the first 7 days of the month, add the Month label -->
            <% if(dayObjectsInYear[i].date <= 7) { %>
                <!-- .monthLabel -->
                <div class="monthLabel">
                  <%= dayObjectsInYear[i].month_short %>
                </div>
            <% } %>
          <% } %>
        <% } %>
    
    </section>
  
  <!-- wrapper div -->
  </div>

    <script src="/js/heatmap.js"></script>
</body>
</html>

