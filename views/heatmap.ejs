<body>

  <div class="signout-container ">
    <a class="signout login-btn" href="/logout">Sign Out</a>
  </div>
  
  
    
  <div id="wrapper">

    <form id="express-form" action="/heatmap/add" method="POST">
      <ul>
        <li>
          <label>
            <input type="checkbox" name="anki" value="Anki">
            <div class="icon-box">
              <i class="fa">Anki</i>
            </div>
          </label>
        </li>
        <li>
          <label>
            <input type="checkbox" name="bank" value="Bank">
            <div class="icon-box">
              <i class="fa">Bank</i>
            </div>
          </label>
        </li>
        <li>
          <label> 
            <input type="checkbox" name="codingChallenge" value="Coding Challenge">
            <div class="icon-box">
              <i class="fa">Coding Challenge</i>
            </div>
          </label>
        </li>
        <li>
          <label> 
            <div class="icon-box btn-text" form="express-form" type="submit">
              <button class="quick-btn btn-text" type="submit">Submit Today's Assignment</button>
            </div>
          </label>
        </li>
      </ul>

