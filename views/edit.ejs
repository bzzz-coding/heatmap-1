    <header>
      <h1>
        <%= user.userName %>'s 100devs Heatmap
      </h1>
    </header>

    <!-- Pop-up -->
    <div class="pop-up-container show">
      <section class="pop-up">
        <div class="close-container">
            <button id="close" aria-label="Dismiss alert" type="button" data-close>
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <p id="pop-up-day"></p>
        <h2 id="pop-up-date"></h2>
        
        <form id="update-form" action="/heatmap/add" method="POST">
            <label for="date">Choose date: </label>
            
            <input type="date" name="date" ass="block"  value="<%=date%>" min="2022-01-01" max="<%=today%>" required>
            <div class="selectContainer block">
              <% if (assignment && assignment.completed !== null && assignment.completed.includes('Anki')) { %>
                <div class="popup-input">
                  <input type="checkbox" name="anki" id="anki" value="Anki" checked>
                  <label for="overallPositive" >Studied Anki Flashcards</label>
                </div>
              <% } else if (!assignment) { %>
                <div class="popup-input">
                  <input type="checkbox" name="anki" id="anki" value="Anki">
                  <label for="overallPositive" >Studied Anki Flashcards</label>
                </div>
              <% } %>

              <% if (assignment && assignment.completed !== null && assignment.completed.includes('Bank')) { %>
                <div class="popup-input">
                  <input type="checkbox" name="bank" id="bank" value="Bank" checked>
                  <label for="overallPositive" >Practiced Interview Questions</label>
                </div>
              <% } else if (!assignment) { %>
                <div class="popup-input">
                  <input type="checkbox" name="bank" id="bank" value="Bank">
                  <label for="overallPositive" >Practiced Interview Questions</label>
                </div>
              <% } %>

              <% if (assignment && assignment.completed !== null && assignment.completed.includes('Coding Challenge')) { %>
                <div class="popup-input">
                  <input type="checkbox" name="codingChallenge" id="codingChallenge" value="Coding Challenge" checked>
                  <label for="overallPositive" >Solved Coding Challenge</label>
                </div>
              <% } else if (!assignment) { %>
                <div class="popup-input">
                  <input type="checkbox" name="codingChallenge" id="codingChallenge" value="Coding Challenge">
                  <label for="overallPositive" >Solved Coding Challenge</label>
                </div>
              <% } %>
                  
            </div>
              
            <!-- <div class="notes-container">
                <label for="notes">Optional notes:</label>
                <textarea id="notes" name="notes" rows="5" cols="33" placeholder="What did you learn today? Any celebrations?"></textarea>
            </div> -->
        </form>

        <div class="buttons block">
            <button class="update-btn" form="update-form" type="submit">Update</button>
            <% if (assignment) { %>
              <a class="delete-btn" id="delete"  data-id='<%= assignment._id %>'>Delete</a>
            <% } %>
        </div>
        <p id="delete-error"></p>
        <!-- <div id="note-entry"></div> -->
      </section>
    </div>
      
    
  <!-- wrapper div -->
  </div>

    <script src="/js/heatmap.js"></script>
